package practice;

import java.util.Arrays;

public class A {
	public static void main(String[] args) {
		int a[] = { 1, 2, 3, 7, 5 };
		int z = 0;
		for (int i = 0; i < a.length - 1; i++) {

			if (a[i] > a[i + 1]) {

				z = a[i];
			}

		}
		for (int i = 0; i < a.length - 1; i++) {
			if (a[i] == z) {

				continue;
			} else {
				if (a[i+1] < a[i ]) {

					z = a[i];
				}
			}
		}

		System.out.println(z);
	}

}
